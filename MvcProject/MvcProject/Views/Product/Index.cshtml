@using MvcProject.Models.Entity
@model List<product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/_MainLayout.cshtml";
}

<h2 class="text-center">ÜRÜNLER</h2>

<table id="table1" class="table table-bordered text-center">
    <thead>
    <tr>
        <th class="text-center">SIRA NO</th>
        <th class="text-center">AD</th>
        <th class="text-center">KATEGORİ</th>
        <th class="text-center">FİYAT</th>
        <th class="text-center">GÜNCELLE</th>
        <th class="text-center">SİL</th>
    </tr>
    </thead>
    @foreach (var product in Model)
    {
        <tr>
            <th class="text-center">@product.productId</th>
            <th class="text-center">@product.productName</th>
            <th class="text-center">@product.category.categoryName</th>
            <th class="text-center">@product.productUnitPrice</th>
            <th class="text-center"><a href="/Product/productList/@product.productId" class="btn btn-primary">GÜNCELLE</a></th>
            <th class="text-center"><a href="/Product/Delete/@product.productId" class="btn btn-danger" onclick="return confirm('Gerçekten Silmek İstiyor Musunuz?')">SİL</a></th>

        </tr>

    }
</table>
<a href="/Product/AddProduct" class="btn btn-primary">Yeni Ürün Ekle</a>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#table1').dataTable({});
</script>